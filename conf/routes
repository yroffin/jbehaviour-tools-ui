# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Application.index()
GET     /rest/reload                 controllers.Application.reload
POST    /rest/reload                 controllers.Application.reload

# LocalStory
GET     /rest/story/scan          controllers.LocalStoryRest.scan()
POST    /rest/story/scan          controllers.LocalStoryRest.scan()
GET     /rest/story/table         controllers.LocalStoryRest.table()
POST    /rest/story/table         controllers.LocalStoryRest.table()
GET     /rest/story/execute       controllers.LocalStoryRest.execute()
POST    /rest/story/execute       controllers.LocalStoryRest.execute()
GET     /rest/story/:id/story     controllers.LocalStoryRest.story(id: Long)
GET     /rest/story/render        controllers.LocalStoryRest.render
POST    /rest/story/render        controllers.LocalStoryRest.render
GET     /rest/story/tree          controllers.LocalStoryRest.tree(operation: String ?= "get")
GET     /rest/story/create        controllers.LocalStoryRest.create
GET     /rest/story/update        controllers.LocalStoryRest.update
GET     /rest/story/delete        controllers.LocalStoryRest.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
